<h2>ジャンル一覧</h2>

<!-- 新規登録欄 -->
<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
<%= render 'layouts/error_messages', model: @genre %>
  <% f.label :"ジャンル名" %>
  <%= f.text_field :name, placeholder: "ジャンル名を登録" %>
  <%= f.submit '登録' %>
<% end %>

<!-- 登録ジャンル一覧表示 -->
<table class="table">
  <tr>
    <th>ジャンル名</td>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td>
      <%= link_to "編集", edit_admin_genre_path(genre) %>
      <%= link_to "削除", admin_genre_path(genre), method: :delete, data: { confilm: "本当に削除しますか" } %>
    </td>
  </tr>
  <% end %>
</table>
