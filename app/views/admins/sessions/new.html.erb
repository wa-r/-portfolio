<div class="bg-image">
  <div class="bg-image-cover">
    <div class="sign-in-container">
      <div class="box">
        <h1 class="login-heading">管理者ログイン</h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="name-field">
            <%= f.label :お名前 %><br />
            <%= f.text_field :name, autofocus: true,class: "login-form" %>
          </div>
          <div class="email-field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-form" %>
          </div>
            <div class="password-field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "login-form" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="remember-field">
              <%= f.check_box :remember_me %>
              <%= f.label :ログインしたままにする, class: "remember-btn" %>
            </div>
          <% end %>
          <div class="login-box">
            <%= f.submit "ログイン", class: "login-btn" %>
          </div>
        <% end %>
        <%= render "members/shared/links" %>
      </div> 
    </div>
  </div>
</div>