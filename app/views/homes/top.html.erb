  </div>
  <div class="genre-box">
    <%= link_to genres_parfait_path do %>
      <p class="genre-name parfait">パフェ</p>
    <% end %>
  </div>
  <div class="genre-box">
    <%= link_to  genres_cafe_path do %>
      <p class="genre-name cafe">カフェ</p>
    <% end %>
  </div>
  <div class="genre-box">
