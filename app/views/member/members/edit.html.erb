<h2>編集画面</h2>
<%= form_with model: @member, url: member_path(@member), method: :patch, local: true do |f| %>
<%= render 'layouts/error_messages', model: @member %>
  <p><%= f.label :"プロフィール画像" %></p>
  <p><%= f.attachment_field :profile_image %></p>
  <p><%= f.label :"名前" %></p>
  <p><%= f.text_field :name %></p>
  <p><%= f.label :"紹介文" %></p>
  <p><%= f.text_area :introduction %></p>
  <p><%= f.submit '変更' %></p>
<% end %>
<p><%= link_to "退会", unsubscribe_path(@member) %></p>
