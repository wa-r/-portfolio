<h2>タイムライン</h2>
<% @tweets.each do |tweet| %>
  <table>
    <tr>
      <td>
        <%= attachment_image_tag tweet.member, :profile_image, fallback: "no_image.jpeg", size: '20x20', format: 'jpeg' %>
        <%= link_to "#{tweet.member.name}", member_path(tweet.member) %>
      </td>
      <td>
        <% if current_member.id == tweet.member_id %>
          <i class="fas fa-pencil-alt"></i>
          <%= link_to "編集", edit_tweet_path(tweet) %>
          <%= link_to "削除", tweet_path(tweet), method: :delete, data: { confirm: "本当に削除してよろしいですか？" } %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>タイトル</td>
      <td><%= tweet.title %></td>
    </tr>
    <tr>
      <td>内容</td>
      <td><%= tweet.content %></td>
    </tr>
    <tr>
      <td><%= attachment_image_tag tweet, :image, size: '100x100', format: 'jpeg' %></td>
    </tr>
  </table>
<% end %>
<%= paginate @tweets %>