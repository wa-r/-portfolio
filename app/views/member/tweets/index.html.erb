<div class="tweet-container">
  <div class="sidebar">
    <%= render 'member/members/show' %>
  </div>
  <!--<h4>タイムライン</h4>-->
  <div class="main-content">
    <% @tweets.each do |tweet| %>
    <div class="tweet-box">
      <table>
        <tr>
          <td>
            <%= attachment_image_tag tweet.member, :profile_image, fallback: "no_image.jpeg", size: '40x40', format: 'jpeg' %>
            <%= link_to "#{tweet.member.name}", member_path(tweet.member) %>
          </td>
        <tr>
          <!--<td>タイトル</td>-->
          <td><%= tweet.title %></td>
        </tr>
        <tr>
        <!--  <td>内容</td>-->
          <td><%= tweet.content %></td>
        </tr>
        <tr>
          <td><%= attachment_image_tag tweet, :image, size: '100x100' %></td>
        </tr>
        <tr>
          <td>
            <%= tweet.created_at.strftime('%F') %>&nbsp;
            <%= tweet.created_at.strftime('%H:%M') %>
          </td>
        </tr>
        <tr>
          <td>
            <span id="likes_btn_<%= tweet.id %>">
              <%= render partial: 'member/tweet_likes/tweet_like', locals: {tweet: tweet} %>
            </span>
            <%= link_to tweet_path(tweet) do %>
              <i class="far fa-comment"></i>
            <% end %>
            <%= tweet.tweet_comments.count %>
          </td>
        </tr>
      </table>
    </div>  
    <% end %>
    <%= paginate @tweets %>
    <!--</div>-->
  </div>
</div>
