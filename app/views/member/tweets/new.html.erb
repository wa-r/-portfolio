<h3 class="page-heading">Tweet</h3>
<!-- 会員詳細画面のクラスを引用 -->
<div class="my-page">
  <div class="tweet-create">
    <%= form_with model: @tweet, local: true do |f| %>
    <%= render 'layouts/error_messages', model: @tweet %>
      <%= f.label :"画像" %><br>
      <p><%= f.attachment_field :image %></p>
      <%= f.label :"タイトル" %><br>
      <p><%= f.text_field :title, placeholder: "タイトルやお店の名前", class: "edit-profile-form" %></p>
      <%= f.label :"つぶやき", class: "contacts-form"%><br>
      <p><%= f.text_area :content, class: "edit-profile-form" %></p>
      <%= f.submit '投稿', class: "edit-profile-btn" %>
    <% end %>
  </div>
</dov>